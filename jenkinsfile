pipeline {
    agent {
        // Define where the pipeline will execute
        agent {
            docker { 
                // Specify the Docker image to use
                image 'node:18' 
            }
        }
    }
    
    stages {
        stage("Build") {
            steps {
                // Execute a shell command to print the Node.js version
                sh 'node --version'
            }
        }
    }
}
